<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tambah Data Gaji : </h1>
        </div>
    </div>  
    <div class="row">
        <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Tambah Data Gaji : 
                    </div>
                    <div class="panel-body">
                        <div class="row">
                                {{#if success}}
                                    <div class="alert alert-success alert-dismissable">
                                        {{success}}
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                                    </div>
                                {{/if}}
                            <div class="col-lg-6">
                                <form role="form" method="POST">
                                    <div class="form-group">
                                        <label>Nama : </label>
                                        <input type="text" name="nama" class="form-control" value="{{nama}}" >
                                    </div>
                                    <div class="form-group">
                                        <label>Tanggal : </label>
                                        <input type="text" name="tanggal" class="form-control" value="{{time}}" />
                                    </div>
                                    <div class="form-group">
                                         <label> Gaji Pokok : </label>
                                        <div class="input-group"> 
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="gaji_pokok" />
                                        </div> 
                                    <div class="form-group">
                                        <label>BPJS : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="bpjs" />
                                        </div>  
                                    </div>
                                    <div class="form-group">
                                        <label>Uang Lapangan : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="uang_lapangan" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Uang Dinas : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="uang_dinas" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Tunjangan Pajak : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="tunjangan_pajak" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label> Potongan Simpanan Wajib : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="simpanan_wajib" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Potongan Iuran : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="iuran" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Potongan Koperasi : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="potongan_koperasi" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Potongan Terlambat : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="potongan_terlambat" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Potongan BPJS : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="potongan_bpjs" />
                                        </div>
                                    </div> 
                                    <div class="form-group">
                                        <label>Potongan Pajak : </label>
                                        <div class="input-group">
                                            <span class="input-group-addon">Rp</span>
                                            <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" name="pajak" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Simpan</button>                             
                                    </div>                     
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>